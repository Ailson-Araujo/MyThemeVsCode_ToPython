{
    "telemetry.telemetryLevel": "off",

    "editor.tokenColorCustomizations": {

        //"strings": "#fca35a",
        "numbers": "#55aaff",//"#d6006e",//"#4ec958",
        "strings": "#fc8728",
        "comments": "#525252",

        "textMateRules": [
            { //comentario
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#525252",}
            },

            // {
            //     "scope": "string",
            //     "settings": {
            //         "fontStyle": "italic"
            //     }
            // },

            // {   //nome da função
            //     "scope": "entity.name.function",
            //     "settings": {
            //         "foreground": "#5a4ec9",}
            // },

           {   // funções internas
               "scope": "keyword.control",
               "settings": {
                   "foreground": "#c94e4e",}
           },

            {   // operadores
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#c94e4e",}
            },

            {   // funções internas def, class ...
                "scope": "storage.type",
                "settings": {
                    "foreground": "#c94e4e",}
            },

            // {   // __init__, len ...
            //     "scope": "support.function",
            //     "settings": {
            //         "foreground": "#ff4e83",}
            // },

            // {   // str, float ...
            //     "scope": "support.type",
            //     "settings": {
            //         //"fontStyle": "bold",
            //         "foreground": "#ff4e83",}
            // }, //  48f874 

            // {   // self
            //     "scope": "variable.language",
            //     "settings": {
            //         "fontStyle": "italic",
            //         "foreground": "#30d353",}
            //         //"foreground": "#fc8728",}
            // },

            {   // class
                "scope": "entity.other.inherited-class",
                "settings": {
                    "fontStyle": "italic",
                    //"foreground": "#4ec985",
                }
            },

            {   // variaveis
                "scope": "variable.parameter",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#4ec985",}
            },

            {   // STRING
                "scope": "punctuation.definition.string.begin",
                "settings": {
                    //"fontStyle": "italic",
                    "foreground": "#fc8728",}
            },

            {   // STRING
                "scope": "punctuation.definition.string.end",
                "settings": {
                    //"fontStyle": "bold",
                    "foreground": "#fc8728",}
            },

        ]
    },
    
    "editor.linkedEditing": true,
    "liveServer.settings.CustomBrowser": "microsoft-edge",

    // dart
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    
    "jupyter.sendSelectionToInteractiveWindow": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    
    // Definição de terminal padrão zsh 
    "terminal.integrated.profiles.windows": {
        "ZSH":{
            "path": "C:\\Windows\\System32\\bash.exe",
            "args": ["-c", "zsh"],
            "icon": "terminal"
        },
    },

    "terminal.integrated.defaultProfile.windows": "ZSH",
    
    // Desativa a inicialização do ambiente virtual quando em uso do ZSH
    "python.terminal.activateEnvironment": true,
    
    // Fonte do terminal
    "terminal.integrated.fontFamily": "'Fira Code Light', Consolas",
    "terminal.integrated.fontSize": 13,

    // Fonte do editor
    "editor.fontFamily": "'Fira Code Light', Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    
    // Tema
    "workbench.colorTheme": "Dracula",
    "workbench.preferredLightColorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",

    // Evita erros de importação com o PyQt5
    //"python.linting.pylintArgs": ["extension-pkg-whitelist=PyQt5"]
}
